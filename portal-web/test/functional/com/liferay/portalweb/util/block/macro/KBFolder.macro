<definition>
	<command name="addCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="ADD_BUTTON" value1="Add" />
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="ADD_MENULIST_FOLDER" value1="Folder" />

		<execute action="CPKnowledgebaseadminAddfolder#type" locator-key1="TITLE_FIELD" value1="${kbFolderName}" />
		<execute action="CPKnowledgebaseadminAddfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${kbFolderDescription}" />
		<execute action="CPKnowledgebaseadminAddfolder#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />

		<if>
			<isset var="kbAddDuplicate" />
			<then>
				<execute action="CPKnowledgebaseadminAddarticle#assertTextEquals" locator-key1="ERROR_MESSAGE_1" value1="Your request failed to complete." />
				<execute action="CPKnowledgebaseadminAddarticle#assertTextEquals" locator-key1="ERROR_MESSAGE_2" value1="Please enter a unique folder name." />
			</then>
			<else>
				<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</else>
		</if>
	</command>

	<command name="deleteCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="FOLDER_TABLE_ACTIONS_BUTTON" value1="Actions" />
		<execute action="CPKnowledgebaseadmin#assertClickNoError" locator-key1="FOLDER_MENULIST_DELETE" value1="Delete" />
		<execute action="CPKnowledgebaseadmin#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this? It will be deleted immediately." />
		<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="editCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="FOLDER_TABLE_ACTIONS_BUTTON" value1="Actions" />
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="FOLDER_MENULIST_EDIT" value1="Edit" />

		<execute action="CPKnowledgebaseadminAddfolder#type" locator-key1="TITLE_FIELD" value1="${kbFolderEditedName}" />
		<execute action="CPKnowledgebaseadminAddfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${kbFolderDescription}" />
		<execute action="CPKnowledgebaseadminAddfolder#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />

		<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="gotoCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="FOLDER_TABLE_FOLDER" value1="${kbFolderName}" />

		<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="FOLDER_BREADCRUMB" value1="${kbFolderName}" />
	</command>

	<command name="gotoViaKBDisplayPG">
		<var name="key_kbFolderName" value="${kbFolderName}" />

		<execute action="PGKnowledgebasedisplay#select" locator-key1="FOLDER_SELECT_DROPDOWN" value1="${kbFolderName}" />
		<execute action="PGKnowledgebasedisplay#assertClick" locator-key1="FOLDER_SELECT_OPTION" value1="${kbFolderName}" />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Knowledge Base" />
		</execute>

		<while>
			<condition action="CPKnowledgebaseadmin#isElementPresent" locator-key1="FOLDER_TABLE_HEADER" />

			<then>
				<execute action="CPKnowledgebaseadmin#assertClick" locator-key1="FOLDER_TABLE_ACTIONS_BUTTON_GENERIC" value1="Actions" />
				<execute action="CPKnowledgebaseadmin#assertClickNoError" locator-key1="FOLDER_MENULIST_DELETE" value1="Delete" />
				<execute action="CPKnowledgebaseadmin#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this? It will be deleted immediately." />
				<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>
	</command>

	<command name="viewFolderTable">
		<var name="key_kbFolderName" value="${kbFolderName}" />

		<execute action="CPKnowledgebaseadmin#assertTextEquals" locator-key1="FOLDER_TABLE_FOLDER" value1="${kbFolderName}" />
	</command>
</definition>