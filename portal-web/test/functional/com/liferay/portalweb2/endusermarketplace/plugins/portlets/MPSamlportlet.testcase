<definition component-name="marketplace-plugins-saml-portlet">
	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="SAMLPortletSmoke" priority="5">
		<property name="portlet.plugins.includes" value="saml-portlet" />

		<var name="appName" value="SAML" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="SAML Admin" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute macro="AppManager#uninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute macro="AppManager#viewUninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>
	</command>
</definition>